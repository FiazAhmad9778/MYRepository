@model AccountdbfirstStoreProcedure.View_Model.ReportViewModel

@{
    ViewBag.Title = "GetReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetReport</h2>

@using (Html.BeginForm("LedgerSummary", "UserAccounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.AccountId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.AccountId, new SelectList(ViewBag.Accounts, "AccountId", "Name"), "----Select Account----", new { @class = "form-control js-Drpdown" })
            @Html.ValidationMessageFor(m => m.AccountId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control js-strtdate" } })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control js-enddate" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.RadioButton("result", "summary", true) <text>Summary</text>
    @Html.RadioButton("result", "detail")<text>Detail</text><br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get" class="btn btn-default" />
        </div>
    </div>
</div>
}
